.tabs {
  display: flex;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  background: #fff;
  box-shadow: 0rpx 1rpx 0rpx 0rpx rgba(0, 0, 0, 0.1);
}
.tab-item {
  flex: 1;
  transition: all 333ms;
}

.tabs .active {
  font-weight: 600;
  color: var(--main-color);
}

.tab-text {
  transition: inherit;
  position: relative;
}

.active .tab-text {
  position: relative;
}

.active .tab-text::after {
  transform: scaleX(1);
  opacity: 1;
}

.tab-text::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -24rpx;
  width: 100%;
  height: 6rpx;
  background: var(--main-color);
  transform: scaleX(0);
  opacity: 0;
  transition: inherit;
}

.item {
  padding: 12rpx 24rpx;
  min-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #1a1919;
  background: white;
}
.item:not(:last-of-type) {
  border: 2rpx solid #f5f6f7;
}
.item .point {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1919;
}
.item .point {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 20rpx;
}
.item .des {
  font-size: 30rpx;
}
.item .time {
  font-size: 28rpx;
  color: #9c9faa;
  margin-top: 15rpx;
}

